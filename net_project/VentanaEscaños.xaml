<Window x:Class="Pactometro.VentanaEscaños"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pactometro"
        mc:Ignorable="d"
        Title="VentanaEscaños" Height="200" Width="400">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"  Text="Por favor, ingrese los nuevos escaños del proceso electoral a modificar:"/>
        <TextBox  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" x:Name="txtEscaño" IsEnabled="True" TextChanged="TxtEscaño_TextChanged"/>
        <Button Grid.Row="2" Content="Modificar" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="20" x:Name="BotonAceptar" IsDefault="True" IsEnabled="false" Click="BotonAceptar_Click" ></Button>
        <Button Grid.Row="3" Content="Cancelar" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="20" x:Name="BotonCancelar" IsCancel="True" IsEnabled="false" Click="BotonCancelar_Click" ></Button>


    </Grid>
</Window>
